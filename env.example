# Natural Language Filter Agent Configuration
# Copy this file to .env and customize for your environment

# =============================================================================
# APPLICATION ENVIRONMENT
# =============================================================================
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
WORKERS=1

# =============================================================================
# OPENAI CONFIGURATION  
# =============================================================================
# Required: Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.1
OPENAI_MAX_TOKENS=2000

# =============================================================================
# FILTER API CONFIGURATION
# =============================================================================
FILTER_API_BASE_URL=http://controlpanel.ogov.me/api/reporting_service/next
FILTER_API_TIMEOUT=30
FILTER_API_RETRIES=3
# Optional: Authentication token for filter API
FILTER_API_AUTH_TOKEN=your-filter-api-token

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_BACKEND=memory
CACHE_DEFAULT_TTL=3600
CACHE_MAX_SIZE=1000
# Required if using Redis cache backend
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# CONVERSATION CONFIGURATION
# =============================================================================
MAX_CONVERSATION_LENGTH=50
SESSION_TIMEOUT=3600
ENABLE_CONVERSATION_HISTORY=true

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
ENABLE_API_KEY_AUTH=true
# Comma-separated list of valid API keys
API_KEYS=your-api-key-1,your-api-key-2
RATE_LIMIT_PER_MINUTE=60
ENABLE_CORS=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
ENABLE_REQUEST_LOGGING=true

# =============================================================================
# DEVELOPMENT-SPECIFIC SETTINGS
# =============================================================================
# Uncomment and modify for development environment
# ENVIRONMENT=development
# DEBUG=true
# LOG_LEVEL=DEBUG
# ENABLE_API_KEY_AUTH=false
# OPENAI_MODEL=gpt-3.5-turbo
# CACHE_BACKEND=memory

# =============================================================================
# PRODUCTION-SPECIFIC SETTINGS  
# =============================================================================
# Uncomment and modify for production environment
# ENVIRONMENT=production
# DEBUG=false
# LOG_LEVEL=WARNING
# ENABLE_API_KEY_AUTH=true
# CACHE_BACKEND=redis
# WORKERS=4
# API_HOST=0.0.0.0

# =============================================================================
# TESTING-SPECIFIC SETTINGS
# =============================================================================
# Uncomment for testing environment
# ENVIRONMENT=testing
# OPENAI_API_KEY=test-key
# ENABLE_API_KEY_AUTH=false
# CACHE_BACKEND=memory
# SESSION_TIMEOUT=300
